{
  "name": "next.js-mcp-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm db:migrate:safe && next build",
    "db:migrate:safe": "if [ -n \"$DATABASE_URL\" ]; then echo 'Running migrations...' && pnpm db:migrate; else echo 'Skipping migration - no DATABASE_URL'; fi",
    "start": "next start",
    "db:migrate": "drizzle-kit migrate",
    "db:setup": "node scripts/setup-pglite.mjs",
    "prepare": "husky",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --watchAll=false --forceExit --detectOpenHandles",
    "test:pre-commit": "NODE_OPTIONS='--experimental-vm-modules --max-old-space-size=4096' jest --testPathPattern='__tests__/(lib|validation|mcp)' --ci --watchAll=false --forceExit --runInBand",
    "test:db": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/db/ --runInBand --detectOpenHandles",
    "db:force-migrate": "node scripts/force-migrate.mjs"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@modelcontextprotocol/sdk": "1.12.0",
    "@vercel/mcp-adapter": "0.7.3",
    "ai": "^4.3.16",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "next": "15.2.4",
    "postgres": "^3.4.7",
    "redis": "^4.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.3",
    "@jest/types": "30.0.0-beta.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.5",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.10",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.7+sha512.c85cd21b6da10332156b1ca2aa79c0a61ee7ad2eb0453b88ab299289e9e8ca93e6091232b25c07cbf61f6df77128d9c849e5c9ac6e44854dbd211c49f3a67adc"
}
