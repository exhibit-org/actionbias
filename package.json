{
  "name": "next.js-mcp-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm db:migrate:safe && next build",
    "db:migrate:safe": "if [ -n \"$DATABASE_URL\" ]; then pnpm db:migrate; else echo 'Skipping migration - no DATABASE_URL'; fi",
    "start": "next start",
    "db:migrate": "drizzle-kit migrate",
    "db:setup": "node scripts/setup-pglite.mjs",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.12.0",
    "@vercel/mcp-adapter": "0.7.3",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "next": "15.2.4",
    "postgres": "^3.4.7",
    "redis": "^4.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.3",
    "@jest/types": "30.0.0-beta.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.7+sha512.c85cd21b6da10332156b1ca2aa79c0a61ee7ad2eb0453b88ab299289e9e8ca93e6091232b25c07cbf61f6df77128d9c849e5c9ac6e44854dbd211c49f3a67adc"
}
